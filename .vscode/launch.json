    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
        },
        {
            "name": "Python: Main Script File",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "args": [
                "solution/knapsack.csv"
            ],
        },
        {
            "name": "Python: Debug Unit Tests",
            "type": "python",
            "request": "launch",
            "console": "internalConsole",
            "program": "${file}",
            "justMyCode": true, // If set to false will go into the module code
            "purpose": ["debug-test"],
        }
    ]
}